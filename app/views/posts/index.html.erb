<h1>Listing posts</h1>

<table>
  <tr>
    <td>ID #</td>
    <td>Title</td>
    <td>Published?</td>
    <td>Links</td>
  </tr>

<% for post in @posts %>
  <tr>
    <td><%= post.id %></td>
    <td><%= link_to post.title, post %></td>
    <td><%= post.published %></td>
    <td>
      <dt><%= link_to 'Edit', edit_post_path(post) %></dt>
      <dt><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></dt>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New post', new_post_path %>
